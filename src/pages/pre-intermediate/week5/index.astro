---
import DefaultLayout from '../../../layouts/DefaultLayout.astro'
import { Breadcrumbs, BreadcrumbsItem } from 'accessible-astro-components'
import { preintScope } from '../../../assets/data/preintScope.js'

import Feature from '../../../components/Feature.astro'


const weekData = preintScope[4]; // Change to correct week (zero-indexed)

---

<DefaultLayout title={`Pre-intermediate Week ${weekData.week}`}>
  <section class="container">
    <div class="mb-10">
      <Breadcrumbs>
        <BreadcrumbsItem href="/" label="Home" />
        <BreadcrumbsItem href="/pre-intermediate" label="Pre-intermediate" />
        <BreadcrumbsItem currentPage={true} label={`Week ${weekData.week}`} />
      </Breadcrumbs>
    </div>
    <div class="space-content container">
      <h1>Week {weekData.week}: {weekData.topic}</h1>
      <div>
        <ul>
          <li><b>Grammar:</b> {weekData.grammar.join(', ')}</li>
          <li><b>Vocabulary:</b> {weekData.vocabulary.join(', ')}</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- CLASS CONTENT -->
  <section class="mb-12 mt-32">
    <div class="container">
      <div class="grid grid-cols-1 gap-32 md:grid-cols-2">
        <div class="space-content">
          <h2>Grammar Activities</h2>
            <Feature icon="mdi:brain" title="Articles: 'a', 'an' and 'the" url="https://learnenglish.britishcouncil.org/grammar/a1-a2-grammar/articles-a-an-the">
              <span class="italic">Click to go to the British Council LearnEnglish site!</span>
            </Feature>
            <Feature icon="mdi:brain" title="Articles: 'the' or no article" url="https://learnenglish.britishcouncil.org/grammar/a1-a2-grammar/articles-the-or-no-article">
              <span class="italic">Click to go to the British Council LearnEnglish site!</span>
            </Feature>
            <Feature icon="mdi:brain" title="Quantifiers: 'few', 'a few', 'little' and 'a bit of'" url="https://learnenglish.britishcouncil.org/grammar/a1-a2-grammar/quantifiers-few-a-few-little-a-bit">
              <span class="italic">Click to go to the British Council LearnEnglish site!</span>
            </Feature>
            <Feature icon="mdi:brain" title="Quantifiers" url="https://learnenglish.britishcouncil.org/grammar/english-grammar-reference/quantifiers">
              <span class="italic">Click to go to the British Council LearnEnglish site!</span>
            </Feature>
            <Feature icon="mdi:brain" title="Specific and general determiners" url="https://learnenglish.britishcouncil.org/grammar/english-grammar-reference/specific-general-determiners">
              <span class="italic">Click to go to the British Council LearnEnglish site!</span>
            </Feature>
            <Feature icon="mdi:brain" title="Indefinite article: 'a' and 'an'" url="https://learnenglish.britishcouncil.org/grammar/english-grammar-reference/indefinite-article">
              <span class="italic">Click to go to the British Council LearnEnglish site!</span>
            </Feature>
            <Feature icon="mdi:brain" title="The definite article: 'the'" url="https://learnenglish.britishcouncil.org/grammar/english-grammar-reference/definite-article">
              <span class="italic">Click to go to the British Council LearnEnglish site!</span>
            </Feature>
        </div>
        <div class="space-content">
          <h2>Vocabulary Activities</h2>
            <Feature icon="mdi:format-letter-case" title="Nature" url="https://learnenglish.britishcouncil.org/vocabulary/a1-a2-vocabulary/nature-1">
              <span class="italic">Click to go to the British Council LearnEnglish site!</span>
            </Feature>
            <Feature icon="mdi:format-letter-case" title="Weather" url="https://learnenglish.britishcouncil.org/vocabulary/a1-a2-vocabulary/weather">
              <span class="italic">Click to go to the British Council LearnEnglish site!</span>
            </Feature>
        </div>
        <div class="space-content">
          <h2>Speaking Activities</h2>
             <Feature icon="ion:chatbubble-ellipses" title="50 conversation questions" url=`/pre-intermediate/week${weekData.week}/speaking`>
              <span class="italic">Check out these conversation questions!</span>
            </Feature>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>

<style>
  @media (max-width: 640px) {
    .exercise {
      display: flex;
      flex-direction: column;
    }

    .exercise .button {
      width: 100%;
      margin-right: 0 !important;
      margin-bottom: 0.5rem;
    }

    .exercise .button:last-child {
      margin-bottom: 0;
    }
  }
</style>

<script>
  import {initVocabImgExercise} from '../../../assets/scripts/vocabImgExercise.js'
  document.addEventListener('DOMContentLoaded', initVocabImgExercise);
</script>
