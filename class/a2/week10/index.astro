---
import Nav from "../../../../components/Nav.astro";
import Head from "../../../../components/Head.astro";
import Footer from "../../../../components/Footer.astro";
import Divider from "../../../../components/Divider.astro";

const week = 10;
const topic = "products";

const title = `Pre-Intermediate week ${week} class materials - JESS.FOO`;
const description = `ELICOS CEFR A2 Pre-Intermediate class materials for ${topic}.`;

const grammars = [
  {
    title: "Passives",
    activity: 1,
    summary: "Do you know how to use the passive voice to change the focus of a sentence?",
    link: "https://learnenglish.britishcouncil.org/grammar/b1-b2-grammar/passives",
  },
  {
    title: "Used to",
    activity: 2,
    summary: "Do you know the difference between 'I used to drive on the left' and 'I'm used to driving on the left'?",
    link: "https://learnenglish.britishcouncil.org/grammar/b1-b2-grammar/different-uses-of-used-to",
  },
];
const readings = [
  {
    title: "Shopping signs and notices (A2)",
    activity: 1,
    summary:
      "Look at the advertisement and do the exercises to practise and improve your reading skills.",
    link: "https://learnenglishteens.britishcouncil.org/skills/reading/a2-reading/shopping-signs-notices",
  },
  {
    title: "Food and restaurants (B1)",
    activity: 2,
    summary:
      "Do you like eating out? Check out these reviews of the trendiest places to eat and improve your reading skills.",
    link: "https://learnenglishteens.britishcouncil.org/skills/reading/b1-reading/food-restaurants",
  },
];
const listenings = [
  {
    title: "Shopping for clothes (A2)",
    activity: 1,
    summary:
      "Listen to the conversation between a customer and a shop assistant and do the exercises to practise and improve your listening skills.",
    link: "https://learnenglishteens.britishcouncil.org/skills/listening/a2-listening/shopping-clothes",
  },
  {
    title: "New inventions (B1)",
    activity: 2,
    summary:
      "Listen to the radio programme and do the exercises to practise and improve your listening skills.",
    link: "https://learnenglishteens.britishcouncil.org/skills/listening/b2-listening/new-inventions",
  },
];
const speakings = [
  {
    title: "50 conversation questions (A2)",
    activity: 1,
    summary: `Use any of these 50 questions to have a conversation about ${topic}.`,
    link: `/class/a2/week${week}/speaking`,
  },
];
const vocabs = [
  {
    title: "Shopping",
    activity: 1,
    summary: "Do these exercises and learn words to talk about shopping.",
    link: "https://learnenglish.britishcouncil.org/vocabulary/a1-a2-vocabulary/shopping",
  },
  {
    title: "Clothes 1",
    activity: 2,
    summary: "Do the exercises to learn words for different kinds of clothes.",
    link: "https://learnenglish.britishcouncil.org/vocabulary/a1-a2-vocabulary/clothes-1",
  },
  {
    title: "Clothes 2",
    activity: 3,
    summary: "Do the exercises to learn vocabulary to talk about clothes.",
    link: "https://learnenglish.britishcouncil.org/vocabulary/a1-a2-vocabulary/clothes-2",
  },
  {
    title: "Everyday objects",
    activity: 4,
    summary: "Learn words for everyday objects by doing these exercises.",
    link: "https://learnenglish.britishcouncil.org/vocabulary/a1-a2-vocabulary/everyday-objects",
  },
  {
    title: "Money",
    activity: 5,
    summary: "Do you know what a 'cheque' is? Find out and learn other words to talk about money by doing these vocabulary exercises.",
    link: "https://learnenglish.britishcouncil.org/vocabulary/a1-a2-vocabulary/money",
  },
];
---

<html lang="en">
  <head>
    <Head title={title} description={description} />
  </head>
  <body class="bg-white dark:bg-slate-800">
    <Nav />
    <div class="bg-white dark:bg-slate-800 pt-24 sm:pt-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h1
            class="font-bold tracking-tight text-slate-900 dark:text-slate-100 text-5xl"
          >
            Week {week}
          </h1>
          <p class="mt-6 text-lg leading-8 text-slate-600 dark:text-slate-300">
            This week we're learning about {topic}.
          </p>
        </div>

        <!-- GRAMMAR -->
        <div class="mx-auto mt-20 max-w-2xl lg:mt-24 lg:max-w-none">
          <h2
            class="pb-10 font-bold tracking-tight text-slate-900 dark:text-slate-100 text-3xl"
          >
            Grammar activities
          </h2>
          <dl class="grid max-w-xl grid-cols-1 lg:gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
            {
              grammars.map((grammar) => (
                <a
                  href={grammar.link}
                  class="text-sm font-semibold leading-6 text-teal-600"
                >
                  <div class="flex flex-col bg-teal-50 dark:bg-slate-700 p-5">
                    <dt class="text-base font-bold leading-7 text-slate-900 dark:text-slate-100">
                      Grammar {grammar.activity}: {grammar.title}
                    </dt>
                    <dd class="mt-1 flex flex-auto flex-col text-base font-normal leading-7 text-slate-600 dark:text-slate-300">
                      <p class="flex-auto">{grammar.summary}</p>
                      <p class="mt-6 font-semibold text-teal-600 dark:text-teal-300">
                        Begin grammar activity {grammar.activity}{" "}
                        <span aria-hidden="true">→</span>
                      </p>
                    </dd>
                  </div>
                </a>
              ))
            }
          </dl>
        </div>

        <Divider />

        <!-- READING -->
        <div class="mx-auto max-w-2xl lg:mt-24 lg:max-w-none">
          <h2
            class="pb-10 font-bold tracking-tight text-slate-900 dark:text-slate-100 text-3xl"
          >
            Reading activities
          </h2>
          <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3"
          >
            {
              readings.map((reading) => (
                <a
                  href={reading.link}
                  class="text-sm font-semibold leading-6 text-teal-600"
                >
                  <div class="flex flex-col bg-fuchsia-50 dark:bg-slate-700 p-5">
                    <dt class="text-base font-bold leading-7 text-slate-900 dark:text-slate-100">
                      Reading {reading.activity}: {reading.title}
                    </dt>
                    <dd class="mt-1 flex flex-auto flex-col text-base font-normal leading-7 text-slate-600 dark:text-slate-300">
                      <p class="flex-auto">{reading.summary}</p>
                      <p class="mt-6 font-semibold text-teal-600 dark:text-teal-300">
                        Begin reading activity {reading.activity}{" "}
                        <span aria-hidden="true">→</span>
                      </p>
                    </dd>
                  </div>
                </a>
              ))
            }
          </dl>
        </div>

        <Divider />

        <!-- LISTENING -->
        <div class="mx-auto max-w-2xl lg:mt-24 lg:max-w-none">
          <h2
            class="pb-10 font-bold tracking-tight text-slate-900 dark:text-slate-100 text-3xl"
          >
            Listening activities
          </h2>
          <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3"
          >
            {
              listenings.map((listening) => (
                <a
                  href={listening.link}
                  class="text-sm font-semibold leading-6 text-teal-600"
                >
                  <div class="flex flex-col bg-blue-50 dark:bg-slate-700 p-5">
                    <dt class="text-base font-bold leading-7 text-slate-900 dark:text-slate-100">
                      Listening {listening.activity}: {listening.title}
                    </dt>
                    <dd class="mt-1 flex flex-auto flex-col text-base font-normal leading-7 text-slate-600 dark:text-slate-300">
                      <p class="flex-auto">{listening.summary}</p>
                      <p class="mt-6 font-semibold text-teal-600 dark:text-teal-300">
                        Begin listening activity {listening.activity}{" "}
                        <span aria-hidden="true">→</span>
                      </p>
                    </dd>
                  </div>
                </a>
              ))
            }
          </dl>
        </div>

        <Divider />

        <!-- SPEAKING -->
        <div class="mx-auto max-w-2xl lg:mt-24 lg:max-w-none">
          <h2
            class="pb-10 font-bold tracking-tight text-slate-900 dark:text-slate-100 text-3xl"
          >
            Speaking activities
          </h2>
          <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3"
          >
            {
              speakings.map((speaking) => (
                <a
                  href={speaking.link}
                  class="text-sm font-semibold leading-6 text-teal-600"
                >
                  <div class="flex flex-col bg-blue-50 dark:bg-slate-700 p-5">
                    <dt class="text-base font-bold leading-7 text-slate-900 dark:text-slate-100">
                      Speaking {speaking.activity}: {speaking.title}
                    </dt>
                    <dd class="mt-1 flex flex-auto flex-col text-base font-normal leading-7 text-slate-600 dark:text-slate-300">
                      <p class="flex-auto">{speaking.summary}</p>
                      <p class="mt-6 font-semibold text-teal-600 dark:text-teal-300">
                        Begin speaking activity {speaking.activity}{" "}
                        <span aria-hidden="true">→</span>
                      </p>
                    </dd>
                  </div>
                </a>
              ))
            }
          </dl>
        </div>

        <Divider />

        <!-- VOCAB -->
        <div class="mx-auto mt-20 max-w-2xl lg:mt-24 lg:max-w-none">
          <h2
            class="pb-10 font-bold tracking-tight text-slate-900 dark:text-slate-100 text-3xl">
            Vocaulary activities
          </h2>
          <dl
            class="grid max-w-xl grid-cols-1 lg:gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
            {
              vocabs.map((vocab) => (
                <a
                  href={vocab.link}
                  class="text-sm font-semibold leading-6 text-teal-600">
                  <div class="flex flex-col bg-teal-50 dark:bg-slate-700 p-5">
                    <dt class="text-base font-bold leading-7 text-slate-900 dark:text-slate-100">
                      Vocab {vocab.activity}: {vocab.title}
                    </dt>
                    <dd class="mt-1 flex flex-auto flex-col text-base font-normal leading-7 text-slate-600 dark:text-slate-300">
                      <p class="flex-auto">{vocab.summary}</p>
                      <p class="mt-6 font-semibold text-teal-600 dark:text-teal-300">
                        Begin vocab activity {vocab.activity}{" "}
                        <span aria-hidden="true">→</span>
                      </p>
                    </dd>
                  </div>
                </a>
              ))
            }
          </dl>
        </div>

        <Footer />
      </div>
    </div>
  </body>
</html>
