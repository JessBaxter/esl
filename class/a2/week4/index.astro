---
import Nav from "../../../../components/Nav.astro";
import Head from "../../../../components/Head.astro";
import Footer from "../../../../components/Footer.astro";
import Divider from "../../../../components/Divider.astro";

const week = 4;
const topic = "challenges";

const title = `Pre-Intermediate week ${week} class materials - JESS.FOO`;
const description = `ELICOS CEFR A2 Pre-Intermediate class materials for week ${week}.`;

const grammars = [
  {
    title: "Past continuous and past simple",
    activity: 1,
    summary: "Do you know how to use the past continuous and past simple?",
    link: "https://learnenglish.britishcouncil.org/grammar/a1-a2-grammar/past-continuous-past-simple",
  },
];
const readings = [
  {
    title: "An infographic on the forgetting curve (A2)",
    activity: 1,
    summary:
      "Read an infographic about forgetting to practise and improve your reading skills.",
    link: "https://learnenglish.britishcouncil.org/skills/reading/a2-reading/infographic-forgetting-curve",
  },
  {
    title: "How to spot fake news (B1)",
    activity: 2,
    summary:
      "Read some tips for spotting fake news to practise and improve your reading skills.",
    link: "https://learnenglish.britishcouncil.org/skills/reading/b1-reading/how-spot-fake-news",
  },
];
const listenings = [
  {
    title: "Leaving a message (A2)",
    activity: 1,
    summary:
      "Listen to someone leaving a message to practise and improve your listening skills.",
    link: "https://learnenglish.britishcouncil.org/skills/listening/a2-listening/leaving-message",
  },
  {
    title: "Meeting an old friend (B1)",
    activity: 2,
    summary:
      "Listen to the conversation between two old friends to practise and improve your listening skills.",
    link: "https://learnenglish.britishcouncil.org/skills/listening/b1-listening/meeting-old-friend",
  },
];
const speakings = [
  {
    title: "50 conversation questions (A2)",
    activity: 1,
    summary:
      "Use any of these 50 questions to have a conversation about competitions.",
    link: `/class/a2/week${week}/speaking`,
  },
  {
    title: "Apologising (A2)",
    activity: 2,
    summary:
      "In this video, Paul says sorry for making Noelia fall over. Listen to the language they use for apologising and practise saying the useful phrases.",
    link: "https://learnenglish.britishcouncil.org/skills/speaking/a2-speaking/apologising",
  },
  {
    title: "Agreeing and disagreeing (B1)",
    activity: 3,
    summary:
      "n this video, Emir and Paul discuss a design for a client. Listen to the language they use for agreeing and disagreeing and practise saying the useful phrases.",
    link: "https://learnenglish.britishcouncil.org/skills/speaking/b1-speaking/agreeing-disagreeing",
  },
];
const writings = [
  {
    title: "An email explaining a problem (A2)",
    activity: 1,
    summary: "Learn how to write an email to explain a problem.",
    link: "https://learnenglish.britishcouncil.org/skills/writing/a2-writing/email-explaining-problem",
  },
  {
    title: "Reflective writing (B1)",
    activity: 2,
    summary:
      "Learn how to write a reflective text about a learning experience.",
    link: "https://learnenglish.britishcouncil.org/skills/writing/b1-writing/reflective-writing",
  },
];
---

<html lang="en">
  <head>
    <Head title={title} description={description} />
  </head>
  <body class="bg-white dark:bg-slate-800">
    <Nav />
    <div class="bg-white dark:bg-slate-800 pt-24 sm:pt-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h1
            class="font-bold tracking-tight text-slate-900 dark:text-slate-100 text-5xl">
            Week {week}
          </h1>
          <p class="mt-6 text-lg leading-8 text-slate-600 dark:text-slate-300">
            This week we're learning about {topic}.
          </p>
        </div>

        <!-- GRAMMAR -->
        <div class="mx-auto mt-20 max-w-2xl lg:mt-24 lg:max-w-none">
          <h2
            class="pb-10 font-bold tracking-tight text-slate-900 dark:text-slate-100 text-3xl">
            Grammar activities
          </h2>
          <dl
            class="grid max-w-xl grid-cols-1 lg:gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
            {
              grammars.map((grammar) => (
                <a
                  href={grammar.link}
                  class="text-sm font-semibold leading-6 text-teal-600">
                  <div class="flex flex-col bg-teal-50 dark:bg-slate-700 p-5">
                    <dt class="text-base font-bold leading-7 text-slate-900 dark:text-slate-100">
                      Grammar {grammar.activity}: {grammar.title}
                    </dt>
                    <dd class="mt-1 flex flex-auto flex-col text-base font-normal leading-7 text-slate-600 dark:text-slate-300">
                      <p class="flex-auto">{grammar.summary}</p>
                      <p class="mt-6 font-semibold text-teal-600 dark:text-teal-300">
                        Begin grammar activity {grammar.activity}{" "}
                        <span aria-hidden="true">→</span>
                      </p>
                    </dd>
                  </div>
                </a>
              ))
            }
          </dl>
        </div>

        <Divider />

        <!-- READING -->
        <div class="mx-auto max-w-2xl lg:mt-24 lg:max-w-none">
          <h2
            class="pb-10 font-bold tracking-tight text-slate-900 dark:text-slate-100 text-3xl">
            Reading activities
          </h2>
          <dl
            class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
            {
              readings.map((reading) => (
                <a
                  href={reading.link}
                  class="text-sm font-semibold leading-6 text-teal-600">
                  <div class="flex flex-col bg-fuchsia-50 dark:bg-slate-700 p-5">
                    <dt class="text-base font-bold leading-7 text-slate-900 dark:text-slate-100">
                      Reading {reading.activity}: {reading.title}
                    </dt>
                    <dd class="mt-1 flex flex-auto flex-col text-base font-normal leading-7 text-slate-600 dark:text-slate-300">
                      <p class="flex-auto">{reading.summary}</p>
                      <p class="mt-6 font-semibold text-teal-600 dark:text-teal-300">
                        Begin reading activity {reading.activity}{" "}
                        <span aria-hidden="true">→</span>
                      </p>
                    </dd>
                  </div>
                </a>
              ))
            }
          </dl>
        </div>

        <Divider />

        <!-- LISTENING -->
        <div class="mx-auto max-w-2xl lg:mt-24 lg:max-w-none">
          <h2
            class="pb-10 font-bold tracking-tight text-slate-900 dark:text-slate-100 text-3xl">
            Listening activities
          </h2>
          <dl
            class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
            {
              listenings.map((listening) => (
                <a
                  href={listening.link}
                  class="text-sm font-semibold leading-6 text-teal-600">
                  <div class="flex flex-col bg-blue-50 dark:bg-slate-700 p-5">
                    <dt class="text-base font-bold leading-7 text-slate-900 dark:text-slate-100">
                      Listening {listening.activity}: {listening.title}
                    </dt>
                    <dd class="mt-1 flex flex-auto flex-col text-base font-normal leading-7 text-slate-600 dark:text-slate-300">
                      <p class="flex-auto">{listening.summary}</p>
                      <p class="mt-6 font-semibold text-teal-600 dark:text-teal-300">
                        Begin listening activity {listening.activity}{" "}
                        <span aria-hidden="true">→</span>
                      </p>
                    </dd>
                  </div>
                </a>
              ))
            }
          </dl>
        </div>

        <Divider />

        <!-- SPEAKING -->
        <div class="mx-auto max-w-2xl lg:mt-24 lg:max-w-none">
          <h2
            class="pb-10 font-bold tracking-tight text-slate-900 dark:text-slate-100 text-3xl">
            Speaking activities
          </h2>
          <dl
            class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
            {
              speakings.map((speaking) => (
                <a
                  href={speaking.link}
                  class="text-sm font-semibold leading-6 text-teal-600">
                  <div class="flex flex-col bg-blue-50 dark:bg-slate-700 p-5">
                    <dt class="text-base font-bold leading-7 text-slate-900 dark:text-slate-100">
                      Speaking {speaking.activity}: {speaking.title}
                    </dt>
                    <dd class="mt-1 flex flex-auto flex-col text-base font-normal leading-7 text-slate-600 dark:text-slate-300">
                      <p class="flex-auto">{speaking.summary}</p>
                      <p class="mt-6 font-semibold text-teal-600 dark:text-teal-300">
                        Begin speaking activity {speaking.activity}{" "}
                        <span aria-hidden="true">→</span>
                      </p>
                    </dd>
                  </div>
                </a>
              ))
            }
          </dl>
        </div>

        <Divider />

        <!-- WRITING -->
        <div class="mx-auto max-w-2xl lg:mt-24 lg:max-w-none">
          <h2
            class="pb-10 font-bold tracking-tight text-slate-900 dark:text-slate-100 text-3xl">
            Writing activities
          </h2>
          <dl
            class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
            {
              writings.map((writing) => (
                <a
                  href={writing.link}
                  class="text-sm font-semibold leading-6 text-teal-600">
                  <div class="flex flex-col bg-yellow-50 dark:bg-slate-700 p-5">
                    <dt class="text-base font-bold leading-7 text-slate-900 dark:text-slate-100">
                      Writing {writing.activity}: {writing.title}
                    </dt>
                    <dd class="mt-1 flex flex-auto flex-col text-base font-normal leading-7 text-slate-600 dark:text-slate-300">
                      <p class="flex-auto">{writing.summary}</p>
                      <p class="mt-6 font-semibold text-teal-600 dark:text-teal-300">
                        Begin writing activity {writing.activity}{" "}
                        <span aria-hidden="true">→</span>
                      </p>
                    </dd>
                  </div>
                </a>
              ))
            }
          </dl>
        </div>

        <Footer />
      </div>
    </div>
  </body>
</html>
