---
import Nav from "../../../components/Nav.astro";
import Head from "../../../components/Head.astro";
import Footer from "../../../components/Footer.astro";

const title = "Pre-Intermediate / A2 Class materials - JESS.FOO";
const description =
  "As a pre-intermediate ELICOS student studying at the CEFR A2 level, these materials are designed to help you improve your English skills.";

const weeks = [
  {
    number: 1,
    title: "Lifestyle",
    summary: "Present simple, present continuous, adverbs",
    link: "/class/a2/week1/",
  },
  {
    number: 2,
    title: "Competitions",
    summary: "Modal verbs, gerunds",
    link: "/class/a2/week2/",
  },
  {
    number: 3,
    title: "Transport",
    summary: "Comparatives, superlatives",
    link: "/class/a2/week3/",
  },
  {
    number: 4,
    title: "Challenges",
    summary: "Past simple, past continuous",
    link: "/class/a2/week4/",
  },
  {
    number: 5,
    title: "The environment",
    summary: "Articles, quantifiers",
    link: "/class/a2/week5/",
  },
  {
    number: 6,
    title: "Stages in Life",
    summary: "'To infinitive', future forms",
    link: "/class/a2/week6/",
  },
  {
    number: 7,
    title: "Work",
    summary: "Present perfect, prepositions",
    link: "/class/a2/week7/",
  },
  {
    number: 8,
    title: "Technology",
    summary: "Zero conditional, first conditional, defining relative clauses",
    link: "/class/a2/week8/",
  },
    {
      number: 9,
      title: "Holidays",
      summary: "Past perfect, subject questions",
      link: "/class/a2/week9/",
    },
    {
      number: 10,
      title: "Products",
      summary: "Passives, 'used to'",
      link: "/class/a2/week10/",
    },
  {
    number: 11,
    title: "History",
    summary: "Reported speech, say and tell",
    link: "/class/a2/week11/",
  },
  {
    number: 12,
    title: "Nature",
    summary: "Second conditionals",
    link: "/class/a2/week12/",
  },
];
---

<html lang="en">
  <head>
    <Head title={title} description={description} />
  </head>
  <body class="bg-white dark:bg-slate-800">
    <Nav />
    <div class="bg-white dark:bg-slate-800 pt-24 sm:pt-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h1
            class="font-bold tracking-tight text-slate-900 dark:text-slate-100 text-4xl"
          >
            Pre-Intermediate (A2)
          </h1>
          <p class="mt-6 text-lg leading-8 text-slate-600 dark:text-slate-300">
            Each week, we study the grammar and vocabulary you need to know
            before you graduate to the Intermediate (B2) class. We also work on
            improving your reading, writing, listening and speaking skills.
          </p>
        </div>

        <!-- WEEKS -->
        <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
          <dl
            class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3"
          >
            {
              weeks.map((week) => (
                <a
                  href={week.link}
                  class="text-sm font-semibold leading-6 text-teal-600"
                >
                  <div class="flex flex-col bg-slate-100 dark:bg-slate-700 p-5">
                    <dt class="text-base font-bold leading-7 text-slate-900 dark:text-slate-100">
                      Week {week.number} : {week.title}
                    </dt>
                    <dd class="mt-1 flex flex-auto flex-col text-base font-normal leading-7 text-slate-600 dark:text-slate-300">
                      <p class="flex-auto">{week.summary}</p>
                      <p class="mt-6 font-semibold text-teal-600 dark:text-teal-300">
                        Study week {week.number}{" "}
                        <span aria-hidden="true">â†’</span>
                      </p>
                    </dd>
                  </div>
                </a>
              ))
            }
          </dl>
        </div>
      </div>

      <Footer />
    </div>
  </body>
</html>
